{
  "name": "copy-paste-component",
  "version": "0.0.0-development",
  "description":
    "A tool to create components, by copying and pasting existing ones.",
  "keywords": [
    "cli",
    "cli-app",
    "frontend",
    "front-end",
    "development",
    "dev",
    "web",
    "generate",
    "generator",
    "component",
    "components",
    "copy",
    "paste",
    "tool",
    "scaffold",
    "app",
    "boilerplate"
  ],
  "author":
    "Gabriel Duarte <gabrielqduarte@gmail.com> (https://github.com/GabrielDuarteM/)",
  "license": "MIT",
  "main": "dist/index.js",
  "homepage": "https://github.com/GabrielDuarteM/copy-paste-component",
  "files": ["dist"],
  "scripts": {
    "commit": "git-cz",
    "start": "yarn build:dev",
    "prebuild": "yarn clean",
    "build": "babel src -d dist --ignore *.test.js",
    "build:dev": "yarn build --watch -s",
    "clean": "rimraf dist",
    "lint": "eslint src/*.js",
    "lint:fix": "eslint src/*.js --fix",
    "test": "jest",
    "test:w": "yarn test --watch",
    "build:ci": "yarn lint && yarn test --coverage && yarn build",
    "prepublishOnly": "yarn build:ci",
    "semantic-release": "semantic-release"
  },
  "bin": {
    "copy-paste-component": "dist/bin.js",
    "cpc": "dist/bin.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GabrielDuarteM/copy-paste-component.git"
  },
  "bugs": {
    "url": "https://github.com/GabrielDuarteM/copy-paste-component/issues"
  },
  "engines": {
    "node": ">=6"
  },
  "jest": {
    "modulePathIgnorePatterns": ["<rootDir>/fixtures/"],
    "collectCoverageFrom": ["src/*.js"]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.5",
    "babel-preset-env": "^1.7.0",
    "codecov": "^3.0.2",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.0.1",
    "eslint-config-airbnb-base": "13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-prettier": "^2.6.1",
    "jest": "^23.2.0",
    "prettier": "^1.13.7",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.6.0"
  },
  "dependencies": {
    "fs-extra": "^6.0.1",
    "glob": "^7.1.2",
    "inquirer": "^6.0.0",
    "klaw-sync": "^4.0.0",
    "yargs": "^11.0.0"
  }
}
